                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/view3"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="150dp"
                        android:layout_marginHorizontal="16dp"
                        android:alpha="0.8"
                        android:background="#FFFFFF"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
