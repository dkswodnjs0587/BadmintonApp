<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!--상단 제목-->
    <TextView
        android:id="@+id/tv_shopping_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="배드민턴 마켓"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!--검색 창-->
    <EditText
        android:id="@+id/et_search"
        android:layout_width="0dp"
        android:layout_height="40dp"

        android:hint="원하는 장비를 검색해보세요"
        android:textSize="14sp"

        android:background="@drawable/shoppingsearchbox"

        android:drawableEnd="@drawable/menubarsearchicon"

        android:drawablePadding="10dp"

        android:paddingStart="15dp"

        android:paddingEnd="12dp"

        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/tv_shopping_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!--태그 버튼-->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout_categories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="#4CAF50"
        app:tabIndicatorColor="#4CAF50"
        app:layout_constraintTop_toBottomOf="@id/et_search">

        <com.google.android.material.tabs.TabItem android:text="전체" />
        <com.google.android.material.tabs.TabItem android:text="라켓" />
        <com.google.android.material.tabs.TabItem android:text="의류" />
        <com.google.android.material.tabs.TabItem android:text="신발" />
        <com.google.android.material.tabs.TabItem android:text="가방" />
        <com.google.android.material.tabs.TabItem android:text="셔틀콕" />
        <com.google.android.material.tabs.TabItem android:text="기타" />
    </com.google.android.material.tabs.TabLayout>

    <!--아이템 목록 표시-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_product_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="10dp"
        android:clipToPadding="false"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2"
        app:layout_constraintTop_toBottomOf="@id/tab_layout_categories"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>