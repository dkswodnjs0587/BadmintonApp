<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image"
    tools:context=".MainActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgroundfilter" />

    <!--상단 바-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingHorizontal="20dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!--프로필 버튼-->
        <ImageView
            android:id="@+id/btn_profile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/menubarprofileicon"
            app:tint="#FFFFFF"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onProfileClick"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!--중앙 문구-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/menubarcoockicon"
                app:tint="#FFFFFF"
                android:layout_marginEnd="6dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Badminton\nLevel Up!"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:lineSpacingExtra="-2dp"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <!--검색 버튼-->
        <ImageView
            android:id="@+id/btn_search"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/menubarsearchicon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/top_bar"
        app:layout_constraintBottom_toTopOf="@+id/bottom_nav_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!--하단 메뉴바-->
    <androidx.cardview.widget.CardView
        android:id="@+id/bottom_nav_container"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginBottom="25dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="35dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="5">

            <!--홈 버튼-->
            <LinearLayout
                android:id="@+id/btn_nav_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical">
                <ImageView android:layout_width="22dp" android:layout_height="22dp"
                    android:src="@drawable/menubarhomeicon" app:tint="#000000" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_marginTop="2dp" android:text="홈" android:textColor="#000000" android:textSize="11sp" android:textStyle="bold" />
            </LinearLayout>

            <!--규칙 버튼-->
            <LinearLayout
                android:id="@+id/btn_nav_rules"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical">
                <ImageView android:layout_width="22dp" android:layout_height="22dp"
                    android:src="@drawable/menubarruleicon" app:tint="#888888" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_marginTop="2dp" android:text="규칙" android:textColor="#888888" android:textSize="11sp" />
            </LinearLayout>

            <!--미니게임 버튼-->
            <LinearLayout
                android:id="@+id/btn_nav_game"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical">
                <ImageView android:layout_width="22dp" android:layout_height="22dp"
                    android:src="@drawable/menubargameicon" app:tint="#888888" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_marginTop="2dp" android:text="미니게임" android:textColor="#888888" android:textSize="11sp" />
            </LinearLayout>

            <!--체육관 버튼-->
            <LinearLayout
                android:id="@+id/btn_nav_place"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical">
                <ImageView android:layout_width="22dp" android:layout_height="22dp"
                    android:src="@drawable/menubarplaceicon" app:tint="#888888" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_marginTop="2dp" android:text="체육관" android:textColor="#888888" android:textSize="11sp" />
            </LinearLayout>

            <!--쇼핑 버튼-->
            <LinearLayout
                android:id="@+id/btn_nav_shop"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical">
                <ImageView android:layout_width="22dp" android:layout_height="22dp"
                    android:src="@drawable/menubarshoppingicon" app:tint="#888888" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_marginTop="2dp" android:text="쇼핑" android:textColor="#888888" android:textSize="11sp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>